<nav class="navbar" style="background-image: linear-gradient(45deg,#72b523 0%,#408243 100%);border-radius: 20px;border: 1px solid;">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/" style="text-decoration: underline;">Trang chủ</a>
    </div>
    <ul class="nav navbar-nav">
      <% types.forEach(function(type) { %>
      <li class="dropdown" style="margin-left: 15px;margin-right: 15px;">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#"><b><%= type.name %></b><span class="caret"></span></a>
        <ul class="dropdown-menu">
        	<% type.type_info.forEach(function(data) { %>
         		<li><a class="dropdown-item" href="/product_list?type_main=<%= type._id %>&type=<%= data._id %>"><i class="icon-chevron-right"></i><b><%= data.name %></b></a></li>
         	<% }); %>
        </ul>
      </li>
      <% }); %>
    </ul>
  </div>
</nav>
<% if(products.length == 0){ %>
	<div>Không tìm thấy sản phẩm nào ! </div>
<% }%> 
<% products.forEach(function(product, index) { %>
	<% if(index == 0){ %>
		<div class="row">
	<% } else{ %>  
		<% if(index%4 == 0){ %>
			</div>
			<div class="row">
		<% }%> 
	<% } %>
	<div class="col-sm-3">
		<div class="thumbnail">
			<br>
			<a  href="product_details?productId=<%= product._id %>&type_main=<%= product.type.type_main %>&type=<%= product.type.type %>"><img src="upload/<%= product.info_product.main_file %>" alt="" style="width:200px; height:200px"/></a>
			<div class="caption">
			  <h5>
			  <a class="" href="product_details?productId=<%= product._id %>&type_main=<%= product.type.type_main %>&type=<%= product.type.type %>"> 
		  			<%= product.info_product.name %>
			  </a>
			  </h5>			 
			  <div>
		          <span class="glyphicon glyphicon-star-empty"></span> 
		          <span class="glyphicon glyphicon-star-empty"></span>
		          <span class="glyphicon glyphicon-star-empty"></span> 
		          <span class="glyphicon glyphicon-star-empty"></span>
		          <span class="glyphicon glyphicon-star-empty"></span> 
		          <a class="btn" href="product_details?productId=<%= product._id %>&type_main=<%= product.type.type_main %>&type=<%= product.type.type %>"> 
		  			<span class="glyphicon glyphicon-eye-open"></span>
				  </a> 
				  <a class="btn open_modal" data-toggle="modal" data-target="#myModal">
				  	<span class="glyphicon glyphicon-shopping-cart"></span>
				  </a> 
	  			  <input type="hidden" name="" value="<%= product._id %>">	
		       </div>
			
			  <strong style="color:red" class="money"><%= product.info_product.price %> Đ</strong>
			</div>
		</div>
	</div>
	<% if(index == (products.length -1)) { %>
		</div>
	<% }%> 
<% }); %>
<div class="text-center">
	<% if(list){ %>
	   <ul class="pagination">
			<li class="page-item <% if(prevPager == -1) { %> disabled <%}%>" >
		      <a class="page-link" href="/product_list?type_main=<%=type_main%>&type=<%=type%>&page=<%=prevPager%>" aria-label="Previous">
		        <span aria-hidden="true">&laquo;</span>
		        <span class="sr-only">Previous</span>
		      </a>
		    </li>
			<% for(var i = 0; i < count; ++i) {%>
		  		<li class="<% if(i == page) { %> active <%}%>"><a href="/product_list?type_main=<%=type_main%>&type=<%=type%>&page=<%=i%>"><%=i+1%></a></li>
		  	<% } %>
		  	<li class="page-item <% if(nextPager > count) { %> disabled <%}%>">
		      <a class="page-link" href="/product_list?type_main=<%=type_main%>&type=<%=type%>&page=<%=nextPager%>" aria-label="Next">
		        <span aria-hidden="true">&raquo;</span>
		        <span class="sr-only">Next</span>
		      </a>
		    </li>
	  	</ul>
	 <% } else{ %>  
	   <ul class="pagination">
			<li class="page-item <% if(prevPager == -1) { %> disabled <%}%>" >
		      <a class="page-link" href="/?page=<%=prevPager%>" aria-label="Previous">
		        <span aria-hidden="true">&laquo;</span>
		        <span class="sr-only">Previous</span>
		      </a>
		    </li>
			<% for(var i = 0; i < count; ++i) {%>
		  		<li class="<% if(i == page) { %> active <%}%>"><a href="/?page=<%=i%>"><%=i+1%></a></li>
		  	<% } %>
		  	<li class="page-item <% if(nextPager > count) { %> disabled <%}%>">
		      <a class="page-link" href="/?page=<%=nextPager%>" aria-label="Next">
		        <span aria-hidden="true">&raquo;</span>
		        <span class="sr-only">Next</span>
		      </a>
		    </li>
	  	</ul>
	<% } %>
	
</div>

