	 	<div class="col-lg-4">
			<div id="sidebar" class="slideBar" style="background-color:floralwhite">
				<div class="" style="margin-left:5px">
				  <h3 style="color:#FF7F50">THÔNG TIN KHÁCH HÀNG:</h3>
				  <form id="buy_form" action="buy_now_next_step" method="POST" onsubmit="return validate_activity();" role="form">
				  	<table class="table table-bordered">
					    <thead>
					    </thead>
					    <tbody>
							<tr>
						     	<td><b>Email</b></td>
						    	<td><%=product_booking.info_personal.email%></td>
							</tr>
							<tr>
						     	<td><b>Tên</b></td>
						    	<td><%=product_booking.info_personal.name%></td>
							</tr>				
							<tr>
						     	<td><b>Số điện thoại</b></td>
						    	<td><%=product_booking.info_personal.mobile%></td>
							</tr>
							<tr>
						     	<td><b>Địa chỉ giao hàng</b></td>
						    	<td><%=product_booking.info_personal.address%></td>
							</tr>
							<tr>
						     	<td><b>Hình thức giao hàng</b></td>
						    	<td>
						    		<% if(product_booking.info_personal.pay_method == 1) { %>
								    	<label class="btn btn-info active">
								      	Giao hàng tận nơi (Thanh toán khi nhận hàng)
								    	</label>
								    <%} else {%>
								    	<label class="btn btn-warning">
									      Đến cửa hàng
									    </label>
								    <%}%>
						    	</td>
							</tr>
					    </tbody>
					</table>
				  </form>
				</div>
			</div>
	 	</div>
	  	<div class="col-lg-4">
	  		<div class="slideBar" style="background-color:#FFF8DC">
		    	<div class="" style="margin-left:5px">
				  <h3 style="color:#FF7F50">THÔNG TIN ĐƠN HÀNG:</h3>

				  <table class="table table-bordered">
				    <thead>
				      <tr style="background-color: seagreen;">
				      	<th style="width:80px">Hình ảnh</th>
				        <th>Sản phẩm</th>
				        <th>Màu sắc</th>
				        <th>Số lượng</th>
				        <th>Đơn giá (VND)</th>
				        <th>Thành tiền (VND)</th>
				      </tr>
				    </thead>
				    <tbody>
						<% product_booking.info_booking.forEach(function(product) { %>
						<% product.product_info.forEach(function(info) { %>
							<tr>
							    <td><img src="upload/<%= info.main_file %>" width="80px" height="80px"></td>
						     	<td><%= info.name %></td>
						     	<td style="background-color:<%= info.color %>"></td>
						    	<td><%= info.number %></td>
						    	<td><%= info.price %></td>
						    	<td><%= info.price*info.number %></td>
							</tr>
						<% }); %>
						<% }); %>
				    </tbody>
				  </table>
				  <span>Tổng tiền: </span><span style="color:red"><%= total_price %> VND</span>
				</div>
			</div>
