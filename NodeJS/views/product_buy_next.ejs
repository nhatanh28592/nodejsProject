    <link rel="stylesheet" media="screen" href="themes/product_template/css/vendor.min.css">
    <link id="mainStyles" rel="stylesheet" media="screen" href="themes/product_template/css/styles.min.css">
    <link rel="stylesheet" media="screen" href="themes/product_template/customizer/customizer.min.css">

    <script src="themes/jquery/jquery.min.js"></script>
    <script src="themes/product/js/product_buy.js" type="text/javascript"></script>
    <script src="themes/js/main.js" type="text/javascript"></script>
    <script src="themes/product_template/js/modernizr.min.js"></script>
	<style type="text/css" id="enject">
		label {
			font-weight:bold;
		}
		#buy_form button {
		    padding: 14px 28px;
		    color: black;
		    font-size: 20px;
		}
		.slideBar {
			border-radius: 10px;
		}
	</style>
  </head>
<body>
<%- include wellcome.ejs %>
<div class="offcanvas-wrapper">
<section class="container padding-top-1x">
	<h3 class="text-center mb-30">XÁC NHẬN ĐƠN HÀNG</h3>
		<div class="row">
		<div class="col-md-6 col-sm-6" style="background: aliceblue;">
			<div>
		      <p style="color: red">Dặt hàng thành công, 1 email đã gởi đến bạn, chúng tôi sẽ liên hệ với bạn để xác nhận, xin chân thành cảm ơn đã sử dụng dịch vụ ! </p>
			</div>
		</div>

		<div class="col-md-6 col-sm-6" style="background-color: beige;">		
			<h4 style="color:#FF7F50">THÔNG TIN ĐƠN HÀNG:</h4>
			<table class="table table-bordered">
			    <thead>
			      <tr>
			        <th>Sản phẩm</th>
			        <th>Số lượng</th>
			        <th>Màu sắc</th>
			        <th>Đơn giá (VND)</th>
			        <th>Thành tiền (VND)</th>
			      </tr>
			    </thead>
			    <tbody>
					<% products_buy.forEach(function(product) { %>
					<% product.product_info.forEach(function(info) { %>
						<tr>
					     	<td><%= info.name %></td>
					    	<td><%= info.number %></td>
					    	<td style="background-color:<%= info.color %>"></td>
					    	<td class="money_format"><%= info.price %></td>
					    	<td class="money_format"><%= info.price*info.number %></td>
						</tr>
					<% }); %>
					<% }); %>
			    </tbody>
			  </table>
			<span>Tổng tiền: </span><span style="color:red"><%= total_price %> $</span>
		</div>
		</div>		 
	</section>
</div>
<div class="offcanvas-wrapper">
	<%- include list_product.ejs %>
</div>
<%- include footer.ejs %>
</body>
</html>