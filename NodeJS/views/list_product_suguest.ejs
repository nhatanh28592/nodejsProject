<section class="container padding-top-3x">
<h3 class="text-center mb-30">Sản Phẩm liên quan</h3>
<% if(products.length == 0){ %>
	<div>Không tìm thấy sản phẩm nào ! </div>
<% }%> 
<% products.forEach(function(product, index) { %>
	<% if(index == 0){ %>
		<div class="row">
	<% } else{ %>  
		<% if(index%3 == 0){ %>
			</div>
			<div class="row">
		<% }%> 
	<% } %>
	<div class="col-md-4 col-sm-6">
			<div class="card mb-30"><a class="card-img-tiles" href="product_details?productId=<%= product._id %>&type_main=<%= product.type.type_main %>&type=<%= product.type.type %>">
			<div class="inner">
				<div class="main-img"><img src="upload/<%= product.info_product.main_file %>" alt="Category"></div>
				<div class="thumblist">
				<% product.file.forEach(function(file, index) { %>
					<% if(index != 0){ %>
						<img src="upload/<%= file.fileName %>" alt="Category">
					<% }%> 
				<% }); %>
				</div>
            </div></a>
			<div class="card-body text-center">
                <h4 class="card-title"><%= product.info_product.name %></h4>
                <p class="money_format" style="color:red; font-weight:bold;" ><%= product.info_product.price %> VND</p>
                <a class="btn btn-outline-primary btn-sm" href="product_details?productId=<%= product._id %>&type_main=<%= product.type.type_main %>&type=<%= product.type.type %>">View Products</a>
            </div>
		</div>
	</div>
	<% if(index == (products.length -1)) { %>
		</div>
	<% }%> 
<% }); %>
</section>
<div class="text-center">
	<ul class="pagination">
		<li class="page-item <% if(prevPager == -1) { %> disabled <%}%>" >
	      <a class="page-link" href="/?productId=<%=productId%>&type_main=<%=type_main%>&type=<%=type%>&page=<%=prevPager%>" aria-label="Previous">
	        <span aria-hidden="true">&laquo;</span>
	        <span class="sr-only">Previous</span>
	      </a>
	    </li>
		<% for(var i = 0; i < count; ++i) {%>
	  		<li class="<% if(i == page) { %> active <%}%>"><a href="/?productId=<%=productId%>&type_main=<%=type_main%>&type=<%=type%>&page=<%=i%>"><%=i+1%></a></li>
	  	<% } %>
	  	<li class="page-item <% if(nextPager > count) { %> disabled <%}%>">
	      <a class="page-link" href="/?productId=<%=productId%>&type_main=<%=type_main%>&type=<%=type%>&page=<%=nextPager%>" aria-label="Next">
	        <span aria-hidden="true">&raquo;</span>
	        <span class="sr-only">Next</span>
	      </a>
	    </li>
  	</ul>
</div>

